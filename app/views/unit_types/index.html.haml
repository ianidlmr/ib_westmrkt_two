- bedrooms = @number_of_bedrooms.present? ? @number_of_bedrooms : '0'
.container-fluid.special{style: 'position: relative;'}
  %ul.nav.nav-pills.bedrooms-filter{ role: "tablist" }
    %li.nav-item.bedroom{ class: (bedrooms == '0' ? 'active' : '') }
      = link_to 'Studio', '#zero-bed', 'data-toggle': "tab", role: "tab", class: 'hidden-sm hidden-xs'
      = link_to 'Studio', '#zero-bed', 'data-toggle': "tab", role: "tab", class: 'visible-sm visible-xs'
    %li.nav-item.bedroom{ class: (bedrooms == '1' ? 'active' : '') }
      = link_to '1 Bedroom', '#one-bed', 'data-toggle': "tab", role: "tab", class: 'hidden-sm hidden-xs'
      = link_to '1 Bed', '#one-bed', 'data-toggle': "tab", role: "tab", class: 'visible-sm visible-xs'
    %li.nav-item.bedroom{ class: (bedrooms == '2' ? 'active' : '') }
      = link_to '2 Bedrooms', '#two-bed', 'data-toggle': "tab", role: "tab", class: 'hidden-sm hidden-xs'
      = link_to '2 Bed', '#two-bed', 'data-toggle': "tab", role: "tab", class: 'visible-sm visible-xs'
    %li.nav-item.bedroom{ class: (bedrooms == '3' ? 'active' : '') }
      = link_to '3 Bedrooms', '#three-bed', 'data-toggle': "tab", role: "tab", class: 'hidden-sm hidden-xs'
      = link_to '3 Bed', '#three-bed', 'data-toggle': "tab", role: "tab", class: 'visible-sm visible-xs'
    %li.nav-item.empty
    %li.filters
      = link_to '#' do
        Filters
        %span= fa_icon 'circle'

.trending-container
  .container-fluid.special
    .tab-content
      .tab-pane#zero-bed{ role: "tabpanel", class: (bedrooms == '0' ? 'active' : '') }
        = render 'zero_bedroom_unit_types'
      .tab-pane#one-bed{ role: "tabpanel", class: (bedrooms == '1' ? 'active' : '') }
        = render 'one_bedroom_unit_types'
      .tab-pane#two-bed{ role: "tabpanel", class: (bedrooms == '2' ? 'active' : '') }
        = render 'two_bedroom_unit_types'
      .tab-pane#three-bed{ role: "tabpanel", class: (bedrooms == '3' ? 'active' : '') }
        = render 'three_plus_bedroom_unit_types'

.container-fluid.special
  .filters-container
    .flex-row
      .price-column
        %h1
          %strong Price
        #price-average{ data: { lowest_price: @lowest_price, highest_price: @highest_price } }
        = hidden_field_tag 'price'

      .den-column
        %h1
          %strong Den
        %p.den{ data: { value: 'true' } } Included
        %p.den{ data: { value: 'false' } } Not Included
        = hidden_field_tag 'den'

      .balcony-column
        %h1
          %strong Balcony
        %p.balcony{ data: { value: 'true' } } Included
        %p.balcony{ data: { value: 'false' } } Not Included
        = hidden_field_tag 'balcony'

      .bathroom-column
        %h1
          %strong Bathrooms
        .bathroom-container{ style: 'display: flex; justify-content: space-between;' }
          %p.number-of-bathrooms{ data: { value: '1' } } 1 Bathroom
          %p.number-of-bathrooms{ data: { value: '2' } } 2 Bathrooms
          %p.number-of-bathrooms{ data: { value: '3' } } 3+ Bathrooms
        = hidden_field_tag 'number_of_bathrooms'

    .btn-container
      = link_to 'Clear All', '#', class: 'btn-clear'
      = link_to 'Apply', '#', class: 'btn-accept'