.row
  .col-md-12
    .panel.panel-default.devise-panel{ style: 'width: 300px; margin: 0 auto;' }
      .panel-heading
        .heading-container
          %h2.text-uppercase.text-center Railway <strong>Mrkt.</strong>
          .form-actions.text-center
            = link_to 'Sign up With Email', '#', 'data-toggle': 'modal', 'data-target': '#signup-modal', class: 'btn btn-success btn-block'
            %p{ style: 'margin-top: 10px;' } or
            = link_to omniauth_authorize_path(resource_name, :google_oauth2), class: 'btn btn-block btn-white' do
              %span
              %span Sign up with Google

        .panel-footer
          %p Already Have an Account?
          = link_to 'Log In', '#', 'data-toggle': 'modal', 'data-target': '#login-modal', class: 'btn btn-success btn-md btn-white'

= render 'shared/signup_modal'
= render 'shared/login_modal'
