.container-fluid.special
  .row
    .col-xs-12.col-md-offset-4.col-md-4
      .panel.panel-default.devise-panel
        .panel-heading
          .heading-container
            %h2.text-uppercase.text-center WEST <strong>MRKT.</strong>
            %h2.text-center Change your password
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
              = f.error_notification
              = f.input :reset_password_token, as: :hidden
              = f.full_error :reset_password_token
              .form-inputs
                .input-text-wrap
                  = f.label 'Password', class: 'input-text-label'
                  = f.input :password, label: 'New password', required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false
                  %span.form-control-feedback{ style: 'color: #64C879;' }= fa_icon 'check'
                .input-text-wrap
                  = f.label 'Confirm your new password', class: 'input-text-label'
                  = f.input :password_confirmation, label: false, required: true
                  %span.form-control-feedback{ style: 'color: #64C879;' }= fa_icon 'check'
              .form-actions.text-center
                = f.button :submit, 'Change my password', class: 'btn btn-success btn-block btn-signup'

