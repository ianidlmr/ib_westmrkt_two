= simple_form_for(@order, url: wizard_path, method: :put) do |f|
  .container
    .row
      .col-md-12
        %h1 Checkout
        %h2 Unit #{@unit.unit_number}-#{@unit.unit_type.name}

        .personal-info-container
          %h1 Your details
          .row
            .col-sm-6
              .form-inputs
                = f.simple_fields_for :user do |u|
                  .input-text-wrap
                    = u.label 'First Name', class: 'input-text-label'
                    = u.input :first_name, required: true, label: false
                  .input-text-wrap
                    = u.label 'Last Name', class: 'input-text-label'
                    = u.input :last_name, required: true, label: false
                  .input-text-wrap
                    = u.label 'Phone', class: 'input-text-label'
                    = u.input :phone_number, required: true, label: false
                  .input-text-wrap
                    = u.label 'Occupation', class: 'input-text-label'
                    = u.input :occupation, required: true, label: false

            .col-sm-6
              .form-inputs
                = f.simple_fields_for :address do |a|
                  .input-text-wrap
                    = a.label 'Address line 1', class: 'input-text-label'
                    = a.input :street_1, label: false
                  .input-text-wrap
                    = a.label 'Zip Code', class: 'input-text-label'
                    = a.input :postal_code, label: false
                  .input-text-wrap
                    = a.label 'City', class: 'input-text-label'
                    = a.input :city, label: false

                  .input-text-wrap
                    = a.label 'State', class: 'input-text-label'
                    = a.input :state, label: false

        .final-check-container
          %p Final Check
          %h1
            %strong #{@unit.unit_type.name} Unit #{@unit.unit_number}
          .row
            .col-xs-3
              %p{style: 'margin: 0'} Floor No.
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.floor_number}

              %p{style: 'margin: 0'} Side of the bldg.
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.orientation}

            .col-xs-3
              %p{style: 'margin: 0'} Den
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.unit_type.den  ? 'Included' : 'Not Included'}

              %p{style: 'margin: 0'} Balcony
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.unit_type.balcony ? 'Included' : 'Not Included'}

            .col-xs-3
              %p{style: 'margin: 0'} Bedrooms
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.unit_type.number_of_bedrooms}

              %p{style: 'margin: 0'} Bathrooms
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.unit_type.number_of_bathrooms}

            .col-xs-3
              %p{style: 'margin: 0'} Interior SQFT
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.unit_type.interior_sqft}

              %p{style: 'margin: 0'} Balcony SQFT
              %h2{style: 'margin: 0; margin-bottom: 20px;'} #{@unit.unit_type.balcony_sqft}

        .deposit-container
          .row
            .col-xs-12
              %h1 Your deposit will be $3000 CAD
              %P The total price of your unit is $#{@unit.price} CAD

        .form-actions.text-center
          = f.button :submit, 'Next', class: 'btn btn-info btn-block'
